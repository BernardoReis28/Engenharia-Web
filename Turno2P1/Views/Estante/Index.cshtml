@model IEnumerable<Turno2P1.Models.Jogo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Introduzir">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontuacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                <label>Opções</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    <img src="/Fotos/@item.Foto" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pontuacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <td>
                        @if (item.Estado == true)
                        {
                            @if (item.Pontuacao < 10)
                            {
                            <a asp-action="Aumenta" asp-route-id="@item.Id" class="btn btn-primary">+</a>
                            }
                            @if (item.Pontuacao > 0)
                            {
                            <a asp-action="Diminui" asp-route-id="@item.Id" class="btn btn-primary">-</a>
                            }

                        <a asp-action="Remover" asp-route-id="@item.Id" class="btn btn-danger">X</a>

                        }
                </td>
            </td>
        </tr>
}
    </tbody>
</table>
